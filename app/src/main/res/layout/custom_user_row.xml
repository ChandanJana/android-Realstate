<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin_5dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center"
                    android:background="@drawable/roundshap_image_border">

                    <com.realestate.utils.CircularImageView
                        android:id="@+id/user_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user" />
                </FrameLayout>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_18_sp"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:layout_marginStart="@dimen/text_margin_5dp"
                android:layout_marginLeft="@dimen/text_margin_5dp"
                android:gravity="center"
                android:text="Rajdip asd"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:typeface="serif" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:layout_weight="1"
                android:drawableTint="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="5432678900"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:typeface="serif" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Admin"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/text_margin_5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/whiteTextColor"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_aadhar_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/text_margin_5dp"
            android:text="345678901234"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:typeface="serif" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_option_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/text_margin_5dp"
            android:tint="@color/whiteTextColor"
            app:srcCompat="@drawable/ic_more_option" />

    </LinearLayout>


</androidx.cardview.widget.CardView>