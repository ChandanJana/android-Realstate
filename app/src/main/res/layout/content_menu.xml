<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/roundshap_image_border">

                <com.realestate.utils.CircularImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Rohit dev"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="example@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14_sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_dashboard" />

                    <TextView
                        android:id="@+id/dashboard_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:padding="5dp"
                        android:text="@string/dash_board"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_user" />

                    <TextView
                        android:id="@+id/user_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/users"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_vehicals" />

                    <TextView
                        android:id="@+id/vehical_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/vehical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_insurance" />

                    <TextView
                        android:id="@+id/insurance_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/insurance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_permit" />

                    <TextView
                        android:id="@+id/permit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/permit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_pollution" />

                    <TextView
                        android:id="@+id/pollution_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/pollution"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_insurance" />

                    <TextView
                        android:id="@+id/txtViewCalibration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/insurance"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_20_sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_travel" />

                    <TextView
                        android:id="@+id/trip_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/trip"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_invoice" />

                    <TextView
                        android:id="@+id/invoice_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/invoice"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_companies" />

                    <TextView
                        android:id="@+id/companies_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/companies"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_material" />

                    <TextView
                        android:id="@+id/material_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/material"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_dealer" />

                    <TextView
                        android:id="@+id/dealer_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/dealer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_home" />

                    <TextView
                        android:id="@+id/branch_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/branch"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_roles" />

                    <TextView
                        android:id="@+id/role_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/role"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_logout" />

                    <TextView
                        android:id="@+id/logout_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18_sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/bottom_img"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_login_bk1"
        android:contentDescription="login background"
        android:scaleType="fitXY" />

</RelativeLayout>