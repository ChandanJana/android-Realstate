<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin_5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="@dimen/text_margin_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/vehicle_option_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:tint="@color/black"
                app:srcCompat="@drawable/ic_more_option" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vehicle_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Rajdip asd"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight=".4"
                    android:text="Insurance"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/vehicle_insurance_status"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button_start1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/vehicle_insurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/text_margin_5dp"
                        android:layout_marginLeft="@dimen/text_margin_5dp"
                        android:layout_weight=".6"
                        android:gravity="start"
                        android:text="Active"
                        android:textColor="@color/active_color"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight=".4"
                    android:text="Pollution"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/vehicle_pollution_status"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button_start1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/vehicle_pollution"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/text_margin_5dp"
                        android:layout_marginLeft="@dimen/text_margin_5dp"
                        android:layout_weight=".6"
                        android:gravity="start"
                        android:text="Active"
                        android:textColor="@color/active_color"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight=".4"
                    android:text="Permit"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/vehicle_permit_status"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button_end1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/vehicle_permit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/text_margin_5dp"
                        android:layout_marginLeft="@dimen/text_margin_5dp"
                        android:layout_weight=".6"
                        android:gravity="start"
                        android:text="Expired"
                        android:textColor="@color/expired_color"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:text="Registration No"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/vehicles_reg_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:text="345678901234"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:layout_marginBottom="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:text="Registration Date"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/vehicles_reg_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:text="27-12-2020"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>