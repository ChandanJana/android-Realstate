<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="@dimen/text_margin_5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/trip_status"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/text_margin_10dp"
            android:background="@drawable/round_button_start"
            android:drawableStart="@drawable/ic_travel"
            android:drawableLeft="@drawable/ic_travel"
            android:drawableTint="@color/whiteTextColor"
            android:gravity="center"
            android:text="Started"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cost_l"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/text_margin_5dp"
            android:layout_marginLeft="@dimen/text_margin_5dp"
            android:layout_marginTop="@dimen/text_margin_5dp"
            android:layout_marginRight="@dimen/text_margin_5dp"
            android:layout_toEndOf="@+id/trip_status"
            android:layout_toRightOf="@+id/trip_status"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trip_start_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_10dp"
                    android:layout_marginLeft="@dimen/text_margin_10dp"
                    android:layout_marginEnd="@dimen/text_margin_10dp"
                    android:layout_marginRight="@dimen/text_margin_10dp"
                    android:text="-"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_20_sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/trip_end_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goa"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip No."
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_10dp"
                    android:layout_marginLeft="@dimen/text_margin_10dp"
                    android:layout_marginEnd="@dimen/text_margin_10dp"
                    android:layout_marginRight="@dimen/text_margin_10dp"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/trip_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go123d12"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trip_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13, FEB 2021"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/trip_date_dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_10dp"
                    android:layout_marginEnd="@dimen/text_margin_10dp"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="normal"
                    android:typeface="serif"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/trip_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13, FEB 2021"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="normal"
                    android:typeface="serif"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cost_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/text_margin_10dp"
            android:layout_marginLeft="@dimen/text_margin_10dp"
            android:layout_marginBottom="@dimen/text_margin_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/trip_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin_10dp"
                android:layout_marginLeft="@dimen/text_margin_10dp"
                android:text="1234"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <ImageView
            android:id="@+id/trip_option_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/text_margin_5dp"
            android:layout_marginRight="@dimen/text_margin_5dp"
            android:layout_marginBottom="@dimen/text_margin_5dp"
            app:srcCompat="@drawable/ic_more_option"
            app:tint="@color/whiteTextColor" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>