<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin_5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pollution_status"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:background="@drawable/round_button_start"
                android:paddingLeft="@dimen/text_margin_5dp"
                android:text="Active"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:typeface="serif"
                android:paddingStart="@dimen/text_margin_5dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pollution_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="123er345"
                android:textSize="@dimen/text_size_18_sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_marginTop="@dimen/text_margin_5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_margin_5dp"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pollution_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="24-12-2020"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" - "
                    android:layout_marginStart="@dimen/text_margin_5dp"
                    android:layout_marginEnd="@dimen/text_margin_5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pollution_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="24-12-2020"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:typeface="serif" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_margin_5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Vehicle Reg No:"
                android:textColor="@color/colorAccent"
                android:textStyle="normal"
                android:typeface="serif" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pollution_vehicles_reg_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="start"
                android:text="1234er"
                android:textColor="@color/colorAccent"
                android:textStyle="normal"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cost_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/text_margin_10dp"
            android:layout_marginStart="@dimen/text_margin_10dp"
            android:layout_marginLeft="@dimen/text_margin_10dp"
            android:layout_marginBottom="@dimen/text_margin_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/pollution_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin_10dp"
                android:layout_marginLeft="@dimen/text_margin_10dp"
                android:text="1234"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pollution_option_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/text_margin_5dp"
            android:layout_marginBottom="@dimen/text_margin_5dp"
            android:src="@drawable/ic_more_option"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_more_option"
            android:layout_marginEnd="@dimen/text_margin_5dp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>